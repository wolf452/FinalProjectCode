pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/wolf452/FinalProjectCode.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    withCredentials([aws(credentialsId: 'aws-cred', region: 'us-east-1')]) {
                        script {
                            env.TF_VAR_AWS_ACCESS_KEY = env.AWS_ACCESS_KEY_ID
                            env.TF_VAR_AWS_SECRET_KEY = env.AWS_SECRET_ACCESS_KEY
                            env.TF_VAR_ANSIBLE_PRIVATE_KEY = credentials('ansible-ssh-key')

                            // Run Terraform Init
                            sh 'terraform init'
                        }
                    }
                }
            }
        }

        stage('Run Ansible') {
            steps {
                dir('/var/lib/jenkins/workspace/terr/ansible') {
                    // Ensure that ansible-playbook command is running correctly
                    sh 'ansible-playbook -i /var/lib/jenkins/workspace/terr/ansible/inventory playbook.yml'
                }
            }
        }
    }

    post {
        always {
            // Archive inventory and terraform state files
            archiveArtifacts artifacts: '**/ansible/inventory, **/terraform/terraform.tfstate', fingerprint: true
            cleanWs()  // Clean workspace after execution
        }
    }
}
