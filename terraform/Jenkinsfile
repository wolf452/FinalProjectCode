pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/wolf452/FinalProjectCode.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    withCredentials([aws(credentialsId: 'aws-cred', region: 'us-east-1')]) {
                        script {
                            env.TF_VAR_AWS_ACCESS_KEY = env.AWS_ACCESS_KEY_ID
                            env.TF_VAR_AWS_SECRET_KEY = env.AWS_SECRET_ACCESS_KEY
                            env.TF_VAR_ANSIBLE_PRIVATE_KEY = credentials('ansible-ssh-key')
                            sh 'terraform init'
                        }
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    withCredentials([aws(credentialsId: 'aws-cred', region: 'us-east-1')]) {
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }

        stage('Sleep for 3 Minutes') {
            steps {
                script {
                    echo 'Waiting for resources to initialize...'
                    sleep(time: 3, unit: 'MINUTES')
                }
            }
        }

        stage('Get EC2 IP') {
            steps {
                dir('terraform') {
                    script {
                        // Fetch the correct EC2 public IP output from Terraform
                        def ec2_ip = sh(script: 'terraform output -raw ec2_public_ips', returnStdout: true).trim()
                        
                    }
                }
            }
        }

        stage('Run Ansible') {
            steps {
                dir('/var/lib/jenkins/workspace/terr/ansible') {
                    sh 'ansible-playbook -i inventory playbook.yaml'
                }
            }
        }
    }

    post {
        always {
            // Archive inventory and terraform state files
            archiveArtifacts artifacts: 'ansible/inventory, terraform/terraform.tfstate', fingerprint: true
            cleanWs()  // Clean workspace after execution
        }
    }
}
